{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "importHelpers": true, // importing helper functions from tslib
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": "./src/scripts"
  },
  "compileOnSave": false,
  "include": [
    "./src/scripts",
    "./webpack.config.ts",
    "./jest.config.ts",
    ".storybook/preview.tsx"
  ],
  "exclude": ["node_modules", "build", "coverage"]
}
